@model List<ECommerceApp.Models.CartItem>

@{
    ViewData["Title"] = "Giỏ hàng của bạn";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col">
            <button class="btn btn-secondary" onclick="history.back()">
                <i class="fas fa-arrow-left"></i> Quay lại
            </button>
        </div>
    </div>

    <h2 class="text-center mb-4">Giỏ hàng của bạn</h2>

    @if (Model.Count == 0)
    {
        <div class="alert alert-warning text-center">
            Giỏ hàng của bạn hiện đang trống. Hãy thêm sản phẩm vào giỏ hàng.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Tên sản phẩm</th>
                        <th scope="col" style="width: 100px;">Số lượng</th>
                        <th scope="col">Giá</th>
                        <th scope="col">Tổng cộng</th>
                        <th scope="col" style="width: 190px;">Hành động</th> <!-- Điều chỉnh chiều rộng -->
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Product.Name</td>
                            <td>
                                <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control" style="width: 60px;" />
                            </td>
                            <td>@item.Product.Price.ToString("C", new System.Globalization.CultureInfo("vi-VN"))</td>
                            <td>@((item.Product.Price * item.Quantity).ToString("C", new System.Globalization.CultureInfo("vi-VN")))</td>
                            <td>
                                <div class="d-flex justify-content-between">
                                    <form asp-action="UpdateCart" method="post" class="d-inline-block">
                                        <input type="hidden" name="id" value="@item.Product.Id" />
                                        <input type="hidden" name="quantity" value="@item.Quantity" class="quantity-input" />
                                        <button type="submit" class="btn btn-primary btn-sm">Cập nhật</button>
                                    </form>
                                    <form asp-action="RemoveFromCart" method="post" class="d-inline-block">
                                        <input type="hidden" name="id" value="@item.Product.Id" />
                                        <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="row">
            <div class="col-md-8">
                <h3 class="text-right">Tổng cộng: @Model.Sum(item => item.Product.Price * item.Quantity).ToString("C", new System.Globalization.CultureInfo("vi-VN"))</h3>
            </div>
            <div class="col-md-4 text-right">
                <a class="btn btn-success btn-lg" asp-controller="Checkout" asp-action="Index">Thanh toán</a>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <script>
        $(document).ready(function () {
            $('input[name="quantity"]').on('change', function () {
                $(this).closest('tr').find('input.quantity-input').val($(this).val());
            });
        });
    </script>
}
