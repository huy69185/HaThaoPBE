@model int
@{
    ViewData["Title"] = "Báo cáo thanh toán";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="payment-notification-wrapper p-5 bg-white rounded shadow">
                <h2 class="text-center text-uppercase font-weight-bold mb-4">Thông báo thanh toán</h2>
                <form asp-action="NotifyPayment" method="post">
                    <div class="form-group">
                        <label for="orderId">Mã đơn hàng</label>
                        <input type="text" class="form-control" id="orderId" name="orderId" value="@Model" readonly>
                    </div>
                    <div class="form-group">
                        <label for="transactionId">Mã giao dịch</label>
                        <input type="text" class="form-control" id="transactionId" name="transactionId" placeholder="Nhập mã giao dịch" required>
                    </div>
                    <div class="form-group">
                        <label for="bank">Ngân hàng</label>
                        <input type="text" class="form-control" id="bank" name="bank" placeholder="Nhập tên ngân hàng" required>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg btn-block text-uppercase font-weight-bold">Xác nhận thanh toán</button>
                </form>
            </div>
        </div>
    </div>
</div>
